{
	"extends": "tslint:recommended",
	"rules": {
		"max-line-length": {
			"options": [
				120
			]
		},
		"new-parens": true,
		"no-arg": true,
		"no-bitwise": true,
		"no-conditional-assignment": true,
		"no-consecutive-blank-lines": false,
		"no-console": {
			"severity": "warning",
			"options": [
				"debug",
				"info",
				"log",
				"time",
				"timeEnd",
				"trace"
			]
		},
		"indent": [
			true,
			"tabs",
			4
		],
		"quotemark": [
			true,
			"single"
		],
		"semicolon": [
			true,
			"never"
		],
		"interface-name": false,
		"arrow-parens": false,
		"object-literal-sort-keys": false,
		"object-literal-shorthand": false
	},
	"jsRules": {
		"max-line-length": {
			"options": [
				120
			]
		},
		"indent": [
			true,
			"tabs",
			4
		],
		"quotemark": [
			true,
			"single"
		],
		"semicolon": [
			true,
			"never"
		],
		"trailing-comma": false,
		"object-literal-sort-keys": false,
		"no-console": false
	}
}